{% extends 'partials/base.html.twig' %}

{% block banner %}
	{% include 'partials/banner.html.twig' with { id: 'banner', next_id: 'intro' } %}
{% endblock banner %}

{% block body %}

    {% set featured_pages = page.collection('features') %}
    {% set first_feature = featured_pages|first %}

	{% include 'partials/sections/intro.html.twig' with { id: 'intro', next_id: (first_feature ? first_feature.slug) } %}

    {% for feature in featured_pages %}
        {% include 'partials/sections/feature.html.twig' with { f: feature, placing: loop.index } %}
        {{ dump(feature) }}
    {% endfor %}

{% endblock body %}